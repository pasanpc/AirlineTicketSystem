<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
         
	<servlet>
		<servlet-name>flights</servlet-name>
		<servlet-class>com.servlet.FlightServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>flights</servlet-name>
		<url-pattern>/flights</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>bookticket</servlet-name>
		<servlet-class>com.servlet.BookTicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>bookticket</servlet-name>
		<url-pattern>/book</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ticketdisplay</servlet-name>
		<servlet-class>com.servlet.TicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ticketdisplay</servlet-name>
		<url-pattern>/ticketdisplay</url-pattern>
	</servlet-mapping>	
	
	<servlet>
		<servlet-name>updateticket</servlet-name>
		<servlet-class>com.servlet.UpdateTicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>updateticket</servlet-name>
		<url-pattern>/updateticket</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>deleteticket</servlet-name>
		<servlet-class>com.servlet.DeleteTicketServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>deleteticket</servlet-name>
		<url-pattern>/deleteticket</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.user.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/log</url-pattern>
	</servlet-mapping>
         
	
</web-app>